  "scripts": {
    "======= build ====================================================================": "",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "======= run ====================================================================": "",
    "start": "nest start",
    "watch": "KAFKAJS_NO_PARTITIONER_WARNING=1 nest start --tsc --watch",
    "======= migrations ====================================================================": "",
    "migrate": "npx ts-node --transpile-only src/infrastructure/postgres/migration.ts",
    "migrate:reset": "rm -rf data && yarn migrate",
    "======= test ====================================================================": "",
    "pretest": "tsc -p tsconfig.test.json || true",
    "test": "vitest --config test/config/vitest.unit.config.ts",
    "test:watch": "vitest --config test/config/vitest.unit.config.ts --ui",
    "pretest:integration": "docker compose -f test/infrastructure/docker-compose.yml up -d",
    "test:integration": "vitest run --config test/config/vitest.integration.config.ts",
    "posttest:integration": "docker compose -f test/infrastructure/docker-compose.yml down",
    "test:run": "vitest run",
    "test:typecheck": "vitest typecheck"
  },
